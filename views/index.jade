                .col-sm-10
                  input#qrLightColor.form-control(type='color', value='#FFFFFF')
              .form-group
                label.col-sm-2.control-label(for='qrBackColor') background color:
                .col-sm-10
                  input#qrBackColor.form-control(type='color', value='#888888')
              .form-group
                label.col-sm-2.control-label(for='qrAntialias') antialias:
                .col-sm-10
                  select#qrAntialias.form-control
                    option(value='0') On
